<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="tz_portfolio_plus-plugin" group="content" method="upgrade">
	<name>plg_content_colors</name>
	<author>Sonny</author>
	<creationDate>Jun, 11st 2018</creationDate>
	<copyright>Copyright (C) 2018 TZ Portfolio. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>support@templaza.com</authorEmail>
	<authorUrl>www.tzportfolio.com</authorUrl>
	<version>1.0.0</version>
	<description>PLG_CONTENT_COLORS_XML_DESCRIPTION</description>

	<files>
		<filename plugin="colors">colors.php</filename>
		<filename>controller.php</filename>
		<filename>router.php</filename>
		<filename>index.html</filename>
		<folder>admin</folder>
		<folder>assets</folder>
		<folder>controllers</folder>
		<folder>css</folder>
		<folder>images</folder>
		<folder>js</folder>
		<folder>language</folder>
		<folder>models</folder>
		<folder>modules</folder>
		<folder>views</folder>
	</files>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="colorlimit" type="text" default="8" label="PLG_CONTENT_COLORS_COLOR_LIMIT_LABEL"
					   description="PLG_CONTENT_COLORS_COLOR_LIMIT_DESC"/>
				<!-- Start article options in category listings -->
				<field type="spacer" name="spacer_article_category_listing_name"
					   class="alert alert-warning btn-block"
					   label="COM_TZ_PORTFOLIO_PLUS_SPACER_ARTICLE_OPTIONS_IN_CATEGORY_LISTINGS"/>
				<field type="radio" name="show_cat_colors"
					   default="0" class="btn-group"
					   label="PLG_CONTENT_COLORS_SHOW_COLORS_LABEL"
					   description="PLG_CONTENT_COLORS_SHOW_COLORS_DESC">
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>
				<field name="show_cat_aco" type="radio"
					default="0" class="btn-group"
					label="PLG_CONTENT_COLORS_SHOW_ACO_LABEL"
					description="PLG_CONTENT_COLORS_SHOW_ACO_DESC">
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>
				<!-- End article options in category listings -->

				<!-- Start article options -->
				<field type="spacer" name="spacer_article_hr" hr="true"/>
				<field type="spacer" name="spacer_article_name"
					   class="alert alert-warning btn-block"
					   label="COM_TZ_PORTFOLIO_PLUS_ATTRIBS_FIELDSET_LABEL"/>
				<field type="radio" name="show_colors"
					   default="1" class="btn-group"
					   label="PLG_CONTENT_COLORS_SHOW_COLORS_LABEL"
					   description="PLG_CONTENT_COLORS_SHOW_COLORS_DESC">
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>
				<field name="show_aco" type="radio"
					default="1" class="btn-group"
					label="PLG_CONTENT_COLORS_SHOW_ACO_LABEL"
					description="PLG_CONTENT_COLORS_SHOW_ACO_DESC">
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>

				<!-- End article options -->
			</fieldset>
		</fields>
	</config>
</extension>
