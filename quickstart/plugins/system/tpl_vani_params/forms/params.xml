                   class="btn-group" default="standard"
                        label="PLG_SYSTEM_TPL_VANI_PARAMS_TYPE">
                <option value="standard">PLG_SYSTEM_TPL_VANI_PARAMS_STANDARD</option>
                <option value="landscape">PLG_SYSTEM_TPL_VANI_PARAMS_LANDSCAPE</option>
                <option value="portrait">PLG_SYSTEM_TPL_VANI_PARAMS_PORTRAIT</option>
            </field>
            <field type="list" name="tpl_vani_title_position"
                   default="bottom-left"
                   label="PLG_SYSTEM_TPL_VANI_PARAMS_TITLE_POSITION">
                <option value="top-left">PLG_SYSTEM_TPL_VANI_PARAMS_TOP_LEFT</option>
                <option value="top-middle">PLG_SYSTEM_TPL_VANI_PARAMS_TOP_MIDDLE</option>
                <option value="top-right">PLG_SYSTEM_TPL_VANI_PARAMS_TOP_RIGHT</option>
                <option value="bottom-left">PLG_SYSTEM_TPL_VANI_PARAMS_BOTTOM_LEFT</option>
                <option value="bottom-middle">PLG_SYSTEM_TPL_VANI_PARAMS_BOTTOM_MIDDLE</option>
                <option value="bottom-right">PLG_SYSTEM_TPL_VANI_PARAMS_BOTTOM_RIGHT</option>
            </field>
        </fieldset>
    </fields>
</form>